{
    "name": "flarum/phpstan",
    "description": "Flarum PHPStan extension",
    "minimum-stability": "dev",
    "license": "MIT",
    "require": {
        "flarum/testing": "^2.0",
        "phpstan/phpstan": "^1.10.0",
        "nunomaduro/larastan": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\PHPStan\\": "src/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        },
        "branch-alias": {
            "dev-main": "2.x-dev"
        }
    },
    "repositories": [{
            "type": "path",
            "url": "../../*/*"
        }],
    "prefer-stable": true
}
